<h1>Your Notifications</h1>

<ul>
  <% @notifications.each do |notification| %>
    <li>
      <% notifiable = notification.notifiable %>
      <% if notifiable.respond_to?(:commentable) %>
        <%= link_to notification.message, polymorphic_path(notifiable.commentable, anchor: "#{notifiable.class.name.downcase}_#{notifiable.id}") %>
      <% else %>
        <!-- Fallback content for notifiables without a commentable -->
        <%= notification.message %>
      <% end %>
      <small>Received at <%= notification.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
    </li>
  <% end %>
</ul>
