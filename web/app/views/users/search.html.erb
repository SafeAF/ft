<div class="container mt-5">
  <div class="d-flex justify-content-center mb-5">
    <%= render 'shared/user_search' %>
  </div>

  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div style="margin-left: 1.25rem; margin-top: 1.25rem;">
            <%= render 'shared/avatar', user: user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to user.username, user_path(user) %>
            </h5>
            <p class="card-text">
              <%= truncate(user.bio.to_plain_text, length: 80) %>
            </p>
            <%= link_to "Message", new_conversation_path(recipient_id: user.id), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= paginate @users %>
  </div>
</div>
