
<%= render 'shared/user_search' %>

<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4">
        <div class="card mb-4">
         <%= render 'shared/avatar', user: user %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to user.username, user_path(user) %>
            </h5>
            <p class="card-text">
              <%= user.email %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
