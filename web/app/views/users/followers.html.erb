<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4"><%= @user.username %>'s Followers</h1>

      <% if @followers.any? %>
        <!-- Pagination Controls (Top) -->
        <div class="mb-3">
          <%= paginate @followers %>
        </div>

        <div class="list-group">
          <% @followers.each do |follower| %>
            <div class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
              <a href="<%= user_path(follower) %>" class="d-flex align-items-center">
                <%= render partial: 'shared/avatar', locals: { user: follower } %>
                <span style="margin-left: 1rem;"><%= follower.username %></span>
              </a>
              <div>
                <span class="d-inline-block mr-2">
                  <%= render partial: 'shared/follow_button', locals: { user: follower } %>
                </span>
                <span class="d-inline-block">
                  <%= render partial: 'shared/send_message_button', locals: { user: follower } %>
                </span>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination Controls (Bottom) -->
        <div class="mt-3">
          <%= paginate @followers %>
        </div>

      <% else %>
        <p class="text-muted">No followers at the moment.</p>
      <% end %>
    </div>
  </div>
</div>
