<!-- app/views/users/listings.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4"><%= @user.username %>'s Listings</h1>

  <% if @listings.any? %>
    <div class="list-group">
      <% @listings.each do |listing| %>
        <a href="<%= listing_path(listing) %>" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= listing.title %></h5>
            <small>Posted <%= time_ago_in_words(listing.created_at) %> ago</small>
          </div>
          <p class="mb-1"><%= truncate(listing.description, length: 100) %></p>
          <small>Price: <%= number_to_currency(listing.price) %></small>
        </a>
      <% end %>
    </div>
  <% else %>
    <p>No listings found.</p>
  <% end %>

  <div class="mt-4">
    <%= paginate @listings %>
  </div>
</div>
