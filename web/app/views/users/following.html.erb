<!-- app/views/users/following.html.erb -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4"><%= @user.username %>'s Following</h1>

      <!-- Pagination Controls (Top) -->
      <div class="mb-3">
        <%= paginate @following %>  <!-- Assuming you're using the kaminari-bootstrap gem -->
      </div>

      <div class="list-group">
        <% @following.each do |user| %>
          <div class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
            <a href="<%= user_path(user) %>" class="d-flex align-items-center">
              <%= render partial: 'shared/avatar', locals: { user: user } %> <!-- Avatar -->
              <span style="margin-left: 1rem;"><%= user.username %></span>
            </a>
            <div>
              <span class="d-inline-block mr-2">
                <%= render partial: 'shared/follow_button', locals: { user: user } %>  <!-- Follow Button -->
              </span>
              <span class="d-inline-block">
                <%= render partial: 'shared/send_message_button', locals: { user: user } %>  <!-- Send Message Button -->
              </span>
            </div>
          </div>
        <% end %>
      </div>


    <div class="col-md-4 mt-4">
      <h3>Who to Follow</h3>
      <div class="list-group">
        <% User.who_to_follow(current_user).each do |user| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <%= render partial: 'shared/avatar', locals: { user: user } %>
              <%= link_to user.username, user_path(user), class: "ml-2", style: "margin-left: 1rem;" %>
            </div>
            <%= render partial: 'shared/follow_button', locals: { user: user } %>
          </div>
        <% end %>
      </div>

      <!-- Pagination Controls (Bottom) -->
      <div class="mt-3">
        <%= paginate @following %>  <!-- Assuming you're using the kaminari-bootstrap gem -->
      </div>
    </div>
  </div>
</div>
