<div class="card rounded">
  <div class="card-body">
    <%= search_form_for @q, url: search_users_path, html: { class: 'form-inline' } do |f| %>

      <div class="form-group mb-2">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text custom-icon">
              <i class="fa fa-search"></i>
            </span>
          </div>
          <%= f.search_field :username_or_email_cont, placeholder: 'Username or email', class: 'form-control' %>
        </div>
      </div>

      <button type="submit" class="btn btn-primary mt-2 mb-2">
        <i class="fa fa-search"></i> Search
      </button>

    <% end %>
  </div>
</div>
