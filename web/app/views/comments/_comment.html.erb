<div class="d-flex flex-start no-shrink mt-4" id="comment_<%= comment.id %>">
  <div class="me-2 no-shrink">
    <%= render partial: 'shared/avatar', locals: { user: comment.user } %>
  </div>


  <div class="flex-grow-1 flex-shrink-1">
    <div class="d-flex justify-content-between align-items-center">
      <p class="mb-1 d-inline">
        <%= link_to comment.user.username, user_path(comment.user) %> <span class="small">- <%= comment.created_at.strftime('%B %d, %Y') %></span>
      </p>
      <div class="action-icons d-inline">
        <% if comment.user == current_user || current_user.moderator? %>
          <%= form_with url: polymorphic_path([comment.commentable, comment]), method: :delete, class: "d-inline" do %>
            <%= button_tag(type: 'submit', class: "btn btn-sm btn-danger") do %>
              <i class="fas fa-trash"></i>
            <% end %>
          <% end %>
        <% end %>
        <%= form_with url: flag_comment_path(comment), method: :post, class: "d-inline" do %>
          <%= button_tag(type: 'submit', class: "btn btn-sm btn-danger") do %>
            <i class="fas fa-flag"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <p class="small mb-0">
      <%= comment.content %>
    </p>
    
    <!-- Displaying replies -->
    <div class="mt-3">
      <strong>Replies:</strong>
      <% comment.replies.visible.each do |reply| %>
        <div class="d-flex flex-start no-shrink mt-4" id="reply_<%= reply.id %>">
          <div class="me-2 no-shrink">
            <%= render partial: 'shared/avatar', locals: { user: reply.user } %>
          </div>
          <div class="flex-grow-1 flex-shrink-1">
            <div class="d-flex justify-content-between align-items-center">
              <p class="mb-1 d-inline">
                <%= link_to reply.user.username, user_path(reply.user) %> <span class="small">- <%= reply.created_at.strftime('%B %d, %Y') %></span>
              </p>
              <div class="action-icons d-inline">
                <% if reply.user == current_user || current_user.moderator? %>
                  <% parent_type = reply.comment.commentable_type.downcase %>
                  <% delete_path = "#{parent_type}_comment_reply_path".to_sym %>
                  <%= form_with url: send(delete_path, reply.comment.commentable, reply.comment, reply), method: :delete, class: "d-inline" do %>
                    <%= button_tag(type: 'submit', class: "btn btn-sm btn-danger") do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  <% end %>
                <% end %>
                <%= form_with url: flag_comment_reply_path(article_id: @article.id, comment_id: comment.id, id: reply.id), method: :post, class: "d-inline" do %>
                  <%= button_tag(type: 'submit', class: "btn btn-sm btn-danger") do %>
                    <i class="fas fa-flag"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
            <p class="small mb-0">
              <%= reply.content %>
            </p>
          </div>
        </div>
      <% end %>
    </div>


    <!-- Add a form to submit a reply to this comment -->
    <div class="mt-3">
      <%= render 'comments/reply_form', comment: comment %>
    </div>
  </div>
</div>
