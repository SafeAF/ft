<!-- app/views/poasts/index.html.erb -->
<div class="container mb-5">
  <h1>All Poasts</h1>
  
  <div class="row mt-5">
    <div class="col-md-12">
      <% if @poasts.any? %>
        <% @poasts.each do |poast| %>
          <%= render 'shared/poast_card', poast: poast %>
        <% end %>
        <%= paginate @poasts %>
      <% else %>
        <p>No poasts available.</p>
      <% end %>
    </div>
  </div>
</div>
