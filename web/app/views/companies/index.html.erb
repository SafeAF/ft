<div class="container">


<h1>Companies</h1>

<%= link_to "New company", new_company_path %>

<div id="companies">
  <% @companies.each do |company| %>
    <div class="row mt-5">
    <div class="col-1">
    <% if company.logo.attached? %>
    <%= image_tag company.logo.variant(:thumb) , width: '100', height: '100' %>
    <% end %>
    </div>
    <div class="col">
    <%= render company %>
    </div>
    <p>
      <%= link_to "Show this company", company %>
    </p>
    </div>
  <% end %>
</div>

<%= link_to "New company", new_company_path %>


</div>