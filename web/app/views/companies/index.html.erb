<div class="container">


<h1>Company Directory</h1>

<%= link_to "New company", new_company_path, class: "btn btn-info" %>

<div id="companies">
  <% @companies.each do |company| %>
    <div class="row mt-5">
    <div class="col-1">
    <% if company.logo.attached? %>
    <%= image_tag company.logo.variant(:thumb) , width: '100', height: '100' %>
    <% end %>
    </div>
    <div class="col">
    
            <h3><%= link_to  company.name , company %></h3>

            <div class="about mt-3">
            <%= company.about.truncate(160) %>
            </div>

          <div class="row mt-2">
            <div class="col">
        

              <div class="row mt-1">
                <div class="col">
                  Address: <%= company.address %>
                </div>
              </div>
        

              <div class="row mt-1">
                <div class="col">
                  Phone: <%= company.phone %>
                </div>
              </div>

              <div class="row">
               <div class="col">
                 
                 Email: <%= company.email %>
                </div>
              </div>


                <div class="row mt-1">
                <div class="col">
                 
              Website: <%= company.website %>
              </div>
              </div>



              <div class="row mt-1">
                <div class="col">
                  Hours: <%= company.hours %>
                </div>
              </div>

            </div>

            <div class="col">







            </div>
          </div>













    </div>

    </div>
  <% end %>
</div>


<%= paginate @companies %>

<%= link_to "New company", new_company_path, class: "btn btn-info" %>


</div>