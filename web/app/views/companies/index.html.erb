<div class="container">
  <div class="text-center">
 
    <h1>Local Business Directory | <%= link_to "List New Business", new_company_path, class: "btn btn-info" %></h1>
 
    <div class="mt-5">
   
    </div> 


  </div>

<div class="row  mt-3 ">
<div class="col d-flex  justify-content-center text-center ">
 <%= render 'search' %>
</div>
</div>


<div class="row  mt-4  ">
  <div class="col d-flex justify-content-center text-center  ">

      <%= paginate @companies %>

  </div>
</div>

<div id="companies">
<div class="row mt-5 d-flex justify-content-center">

  <% @companies.each do |company| %>
    <div class="row mt-5">
    <div class="col-1">
    <% if company.logo.attached? %>
    <%= image_tag company.logo.variant(:thumb) , width: '100', height: '100' %>
    <% end %>
    </div>
    <div class="col ">
    
            <h3><%= link_to  company.name , company %></h3>

            <div class="about mt-3">
            <%= company.about.truncate(160) %>
            </div>

          <div class="row mt-2">
            <div class="col">
        

              <div class="row mt-1">
                <div class="col">
                  Address: <%= company.address %>
                </div>
              </div>
        

              <div class="row mt-1">
                <div class="col">
                  Phone: <%= company.phone %>
                </div>
              </div>

              <div class="row">
               <div class="col">
                 
                 Email: <%= company.email %>
                </div>
              </div>


                <div class="row mt-1">
                <div class="col">
                 
              Website: <%= company.website %>
              </div>
              </div>



              <div class="row mt-1">
                <div class="col">
                  Hours: <%= company.hours %>
                </div>
              </div>

            </div>


              <div class="row mt-1">
            <div class="col">

            Industry: <%= company.category %>

            </div>



            </div>
          </div>













    </div>

    </div>
  <% end %>
</div>

<div class="row  mt-4  ">
  <div class="col d-flex justify-content-center text-center  ">

      <%= paginate @companies %>

  </div>
</div>

</div>