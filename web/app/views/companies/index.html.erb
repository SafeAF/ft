<p style="color: green"><%= notice %></p>

<h1>Companies</h1>

<%= link_to "New company", new_company_path %>

<div id="companies">
  <% @companies.each do |company| %>
    <div class="row mt-5">
    <% if company.logo.attached? %>
    <%= image_tag company.logo.variant(:thumb) %>
    <% end %>
    <%= render company %>
    <p>
      <%= link_to "Show this company", company %>
    </p>
    </div>
  <% end %>
</div>

<%= link_to "New company", new_company_path %>


