<%= search_form_for @q, html: { class: 'form' } do |f| %>

  <div class="row d-flex">
    <div class="col">
     
      <%= f.search_field :name_cont, class: 'form-control' %>
    </div>


  <%= f.label :category %>
  <%= f.select :category, Company.categories.keys.map { |key| [Company.categories[key], key] }, prompt: 'Select a category' %>

  <!-- Submit button -->
  <%= f.submit %>



