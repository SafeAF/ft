<%= search_form_for @q, html: { class: 'form' } do |f| %>

  <div class="row">
    <div class="col">
      <%= f.label :name_cont, class: 'form-label' %>
      <%= f.search_field :name_cont, class: 'form-control' %>
    </div>

    <div class="col-4">
      <%= f.submit "Search", class: "btn btn-primary mt-4" %>
    </div>
  </div>

<% end %>
