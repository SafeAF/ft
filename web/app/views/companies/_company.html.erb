<div id="<%= dom_id company %>" class="card mt-4">
  <div class="card-body mt-4">
    <h3 class="card-title">
          <% if company.logo.attached? %>
    <%= image_tag company.logo.variant(:thumb) , width: '100', height: '100' %>
    <% end %>
    <%= link_to company.name , company %>  
<% if company.user == current_user %>
|
  <%= link_to edit_company_path(@company) do %>
    <i class="fa-solid fa-pen-to-square"></i>
  <% end %>
<% end %>

 
    
    </h3>

    <p class="card-text">
     
      <%= company.about.truncate(160) %>
    </p>

    <div class="row">
      <div class="col-md-6">
              <p>
          <strong>Address:</strong>
          <%= company.address %>
        </p>

        <p>
          <strong>Contact:</strong> <%= company.contact %>
        </p>
        <p>
          <strong>Phone:</strong>
          <%= company.phone %>
        </p>



        <p>
          <strong>Email:</strong>
          <%= company.email %>
        </p>

      </div>

      <div class="col-md-6">
        <p>
          <strong>Website:</strong>
          <%= company.website %>
        </p>

        <p>
          <strong>Hours:</strong>
          <%= company.hours %>
        </p>


        <p>
          <strong>Industry:</strong>
          <%= company.category %>
        </p>
      </div>
    </div>

<% if company.user == current_user %>
  <%= button_to "Destroy this company", @company, method: :delete %>
<% end %>


  </div>
</div>
