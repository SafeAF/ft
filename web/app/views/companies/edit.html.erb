<div class="container text-center">
  <h1>Editing Company</h1>
</div>

<div class="container">
  <div class="card rounded">
    <div class="card-body">
      <div class="col">

        <!-- Render the form partial with @company passed to it -->
        <%= render "form", company: @company %>

        <!-- Navigation links styled as Bootstrap buttons -->
        <div class="mt-3">
          <%= link_to "Show this company", @company, class: "btn btn-primary" %>
          <%= link_to "Back to companies", companies_path, class: "btn btn-secondary" %>
        </div>

      </div>
    </div>
  </div>
</div>
