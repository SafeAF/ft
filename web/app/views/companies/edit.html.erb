<div class="container text-center mt-2">
  <h1 class="body-headline-text">Edit Company</h1>
</div>

<div class="container mb-5 custom-form-container">
  <div class="card form card rounded">
    <div class="card-body">
      <div class="col">
        
        <%= render "form", company: @company %>

        <div class="mt-3 d-flex justify-content-center">
          <%= link_to "Show this company", @company, class: "btn btn-primary mt-2" %>
          <%= link_to "Back to companies", companies_path, class: "btn btn-secondary mt-2" %>
        </div>

      </div>
    </div>
  </div>
</div>
