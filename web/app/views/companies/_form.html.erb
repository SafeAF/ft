<div class="container">
<div class="card rounded">
  <div class="card-body">
    <div class="col-6 ">
<%= form_with(model: company, html: {class: 'needs-validation', novalidate: true}) do |form| %>
  <% if company.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :contact, class: "form-label" %>
    <%= form.text_field :contact, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :website, class: "form-label" %>
    <%= form.text_field :website, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :hours, class: "form-label" %>
    <%= form.text_field :hours, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :about, class: "form-label" %>
    <%= form.text_area :about, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.select :category, Company.categories.keys.map { |c| [c.humanize, c] }, include_blank: false %>

  </div>

  <div class="mb-3">
    <%= form.label :logo, class: "form-label" %>
    <%= form.file_field :logo, class: "form-control" %>
  </div>

  </div>
  <div class="col">

<p>You can upload images and marketing material here:</p>
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.rich_text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3 d-flex justify-content-center ">
    <%= form.submit class: "btn btn-primary" %>
  </div>


  </div>
<% end %>

</div>
</div>
</div>