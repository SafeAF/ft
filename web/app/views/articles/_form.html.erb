<div class="container">
  <div class="card rounded">
    <div class="card-body">
      <div class="col">
        <%= form_with(model: article, html: {class: 'needs-validation', novalidate: true}) do |form| %>
          <% if article.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
              <ul>
                <% article.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- User ID (Generally this would be set in the controller and not directly editable by users) -->
          <div class="mb-3 d-none">
            <%= form.hidden_field :user_id, value: current_user.id %>
          </div>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :content, class: "form-label" %>
            <%= form.rich_text_area :content, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :location, class: "form-label" %>
            <%= form.text_field :location, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :category, class: "form-label" %>
            <%= form.text_field :category, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :thumbnail, class: "form-label" %>
            <%= form.file_field :thumbnail, class: "form-control" %>
          </div>

          <div class="mb-3 d-flex justify-content-center">
            <%= form.submit class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
