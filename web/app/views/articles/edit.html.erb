<div class="container text-center">
  <h1>Editing Article</h1>
</div>

<div class="container">
  <div class="card rounded">
    <div class="card-body">
      <div class="col">
        
        <!-- Render the form partial with @article passed to it -->
        <%= render "form", article: @article %>
        
        <!-- Links for navigation -->
        <div class="mt-3">
          <%= link_to "Show this article", @article, class: "btn btn-primary" %>
          <%= link_to "Back to articles", articles_path, class: "btn btn-secondary" %>
        </div>

      </div>
    </div>
  </div>
</div>
