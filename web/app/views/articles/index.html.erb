<div class="container mt-5">
  <!-- Display notice -->
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <h1>Local News and Events</h1>
  <p>Great for garage sales, missing pets, or crime alerts</p>
  
  <!-- New Article Button -->
  <div class="mb-3">
    <%= link_to 'Create New Event or Story', new_article_path, class: "btn btn-primary" %>
  </div>

  <!-- Articles Cards -->
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @articles.each do |article| %>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article %></h5>
            <p class="card-text"><%= truncate(article.description, length: 50) %></p>
            <p class="card-text"><small class="text-muted">Location: <%= article.location %></small></p>
            <p class="card-text"><small class="text-muted">Views: <%= article.views %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @articles %>
  </div>
</div>
