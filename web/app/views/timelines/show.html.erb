<!-- app/views/timelines/show.html.erb -->
<div class="container">
  <h1>Your Timeline</h1>
 <div class="row mt-5">
    <div class="col-md-8">
      <% @poasts.each do |poast| %>
        <div class="card mb-3">
          <% if poast.thumbnail.attached? %>
            <%= image_tag poast.thumbnail.variant(resize_to_limit: [500, 300]), class: 'card-img-top' %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to poast.title, poast_path(poast) %>
            </h5>
            <p class="card-text"><%= poast.subheading %></p>
              <p class="card-text">
                <small class="text-muted"><i>Posted <%= time_ago_in_words(poast.created_at) %> ago</i></small>
              </p>
          </div>
        </div>
      <% end %>
      <%= paginate @poasts %>
    </div>



    <div class="col-md-4">
      <h3>Who to Follow</h3>
      <div class="list-group">
        <% @most_followed_users.each do |user| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <%= render partial: 'shared/avatar', locals: { user: user } %>
              <%= link_to user.username, user_path(user), class: "ml-2", style: "margin-left: 1rem;" %>
            </div>
            <%= render partial: 'shared/follow_button', locals: { user: user } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
 