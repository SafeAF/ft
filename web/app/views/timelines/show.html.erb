<!-- app/views/timelines/show.html.erb -->
<div class="container">
  <h1>Your Timeline</h1>
 <div class="row">
    <div class="col-md-8">
      <ul>
        <% @poasts.each do |poast| %>
          <li class="d-flex align-items-start">
            <div class="col-md-2">
              <% if poast.thumbnail.attached? %>
                <%= image_tag poast.thumbnail.variant(resize_to_limit: [100, 100]), class: 'mr-3' %>
              <% end %>
            </div>
            <div class="col-md-10">
              <strong><%= link_to poast.title, poast_path(poast) %></strong>
              <p><%= poast.subheading %></p>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @poasts %>
    </div>



    <div class="col-md-4">
      <h3>Who to Follow</h3>
      <div class="list-group">
        <% @most_followed_users.each do |user| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <%= render partial: 'shared/avatar', locals: { user: user } %>
              <%= link_to user.username, user_path(user), class: "ml-2", style: "margin-left: 1rem;" %>
            </div>
            <%= render partial: 'shared/follow_button', locals: { user: user } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
