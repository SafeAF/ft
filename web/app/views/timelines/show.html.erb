<!-- app/views/timelines/show.html.erb -->

<div class="container">
  <h1>Your Timeline</h1>

  <div class="row">
    <div class="col-md-8">
      <ul>
        <% @poasts.each do |poast| %>
          <li>
            <strong><%= link_to poast.title, poast_path(poast) %></strong>
            <p><%= poast.subheading %></p>
          </li>
        <% end %>
      </ul>
      <%= paginate @poasts %>
    </div>
    
    <div class="col-md-4">
      <h3>Who to Follow</h3>
      <ul>
        <% @most_followed_users.each do |user| %>
          <li>
            <%= link_to user.username, user_path(user) %> 
            <!-- Add Follow button here if you want -->
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
