<%= form_with(model: @job, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if @job.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% @job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :job_type, class: 'form-label' %>
    <%= form.text_field :job_type, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :location, class: 'form-label' %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :company_name, class: 'form-label' %>
    <%= form.text_field :company_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :company_description, class: 'form-label' %>
    <%= form.text_area :company_description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :company_website, class: 'form-label' %>
    <%= form.text_field :company_website, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :company_email, class: 'form-label' %>
    <%= form.email_field :company_email, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :company_phone, class: 'form-label' %>
    <%= form.text_field :company_phone, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :company_contact, class: 'form-label' %>
    <%= form.text_field :company_contact, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :details, "Job Details", class: 'form-label' %>
    <%= form.rich_text_area :details, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
