<div class="container mt-5 mb-2">
<% content_for :page_title do %>
  Job Board
<% end %>

<% content_for :custom_buttons do %>
  <%= link_to new_job_path, class: "btn btn-custom mb-3" do %>
    <i class="fa fa-pencil-alt"></i> Post New Job
  <% end %>
<% end %>

  <div class="row mt-2">
    <div class="col d-flex justify-content-center text-center">
<div class="card rounded mt-4">
  <div class="card-body">
    <%= search_form_for @q, html: { class: 'form-inline' } do |f| %>
      
      <!-- Title Field -->
      <div class="form-group mb-2">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text custom-icon">
              <i class="fa fa-font"></i> <!-- Icon for title -->
            </span>
          </div>
          <%= f.search_field :title_cont, placeholder: 'Search by title', class: 'form-control' %>
        </div>
      </div>

      <!-- Job Type Field -->
      <div class="form-group mx-sm-3 mb-2">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text custom-icon">
              <i class="fa fa-briefcase"></i> <!-- Icon for job type -->
            </span>
          </div>
          <%= f.search_field :job_type_cont, placeholder: 'Search by job type', class: 'form-control' %>
        </div>
      </div>

      <!-- Location Field -->
      <div class="form-group mx-sm-3 mb-2">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text custom-icon">
              <i class="fa fa-map-marker"></i> <!-- Icon for location -->
            </span>
          </div>
          <%= f.search_field :location_cont, placeholder: 'Search by location', class: 'form-control' %>
        </div>
      </div>

      <!-- Search Button -->
      <div class="form-group mt-2 mb-2">
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-search"></i> Search
        </button>
      </div>

    <% end %>
  </div>
</div>
</div>
</div>




  <!-- Job List Group -->
  <div class="list-group mt-5">
  <% @jobs.each do |job| %>
    <div class="list-group-item <%= 'pinned' if job.pinned %>">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-3">
            <%= link_to job.title, job %>
          </h5>
          <p class="mb-2">
            <i class="fas fa-align-left"></i> Job Description: <%= truncate(job.description, length: 250) %>
          </p>
          <p class="mb-2">
            <i class="fas fa-briefcase"></i> Type: <%= job.job_type %>
          </p>
          <p class="mb-2">
            <i class="fas fa-map-marker-alt"></i> Location: <%= job.location %>
          </p>
          <p class="mb-4">
            <i class="fas fa-building"></i> Company: <%= job.company_name %>
          </p>
        </div>
        <div>
          <!-- You can place additional content here, like action buttons or job status indicators -->
        </div>
      </div>
    </div>
  <% end %>
</div>


  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @jobs %>
  </div>

</div>
