<div class="container mt-5 mb-2">
  <h1>Job Listings</h1>

  <!-- New Job Button -->
  <div class="mb-4">
    <%= link_to 'New Job', new_job_path, class: "btn btn-primary" %>
  </div>

<div class="container mt-4">
  <%= search_form_for @q, class: 'form-inline' do |f| %>
    <div class="form-group mr-2">
      <%= f.label :title_cont, 'Title contains', class: 'mr-1' %>
      <%= f.search_field :title_cont, class: 'form-control' %>
    </div>

    <div class="form-group mr-2">
      <%= f.label :job_type_cont, 'Job Type contains', class: 'mr-1' %>
      <%= f.search_field :job_type_cont, class: 'form-control' %>
    </div>

    <div class="form-group mr-2">
      <%= f.label :location_cont, 'Location contains', class: 'mr-1' %>
      <%= f.search_field :location_cont, class: 'form-control' %>
    </div>

    <div class="form-group mt-2">
      <%= f.submit 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>



  <!-- Job List Group -->
  <div class="list-group mt-5">
  <% @jobs.each do |job| %>
    <div class="list-group-item <%= 'pinned' if job.pinned %>">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-3">
            <%= link_to job.title, job %>
          </h5>
          <p class="mb-2">
            <i class="fas fa-align-left"></i> Job Description: <%= truncate(job.description, length: 250) %>
          </p>
          <p class="mb-2">
            <i class="fas fa-briefcase"></i> Type: <%= job.job_type %>
          </p>
          <p class="mb-2">
            <i class="fas fa-map-marker-alt"></i> Location: <%= job.location %>
          </p>
          <p class="mb-4">
            <i class="fas fa-building"></i> Company: <%= job.company_name %>
          </p>
        </div>
        <div>
          <!-- You can place additional content here, like action buttons or job status indicators -->
        </div>
      </div>
    </div>
  <% end %>
</div>


  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @jobs %>
  </div>

</div>
