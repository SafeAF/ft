<div class="container mt-5">
  <h1>Job Listings</h1>

  <!-- New Job Button -->
  <div class="mb-3">
    <%= link_to 'New Job', new_job_path, class: "btn btn-primary" %>
  </div>

  <!-- Job List Group -->
  <div class="list-group">
    <% @jobs.each do |job| %>
      <div class="list-group-item">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1"><%= link_to job.title, job %></h5>
            <p class="mb-1">Type: <%= job.job_type %></p>
            <p class="mb-1">Location: <%= job.location %></p>
            <p class="mb-1">Company: <%= job.company_name %></p>
          </div>
          <div>
            <%= link_to 'Show', job, class: "btn btn-info btn-sm" %>
            <% if job.user == current_user %>
              <%= link_to 'Edit', edit_job_path(job), class: "btn btn-primary btn-sm" %>
              <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @jobs %>
  </div>

</div>
