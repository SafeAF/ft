<%= form_for [:admin, @advertiser], html: { class: 'needs-validation', novalidate: '' } do |f| %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: 'form-label' %>
    <%= f.text_area :details, class: 'form-control', rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: 'form-label' %>
    <%= f.text_field :status, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :billing_info, class: 'form-label' %>
    <%= f.text_area :billing_info, class: 'form-control', rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :contact_name, class: 'form-label' %>
    <%= f.text_field :contact_name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, class: 'form-label' %>
    <%= f.telephone_field :phone, class: 'form-control', pattern: "[0-9]{3}-[0-9]{3}-[0-9]{4}", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
