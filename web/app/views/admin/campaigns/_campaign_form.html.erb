<%= form_for [:admin, @advertiser, @campaign] do |f| %>
  <!-- Your form fields here -->
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :budget %>
  <%= f.number_field :budget %>

  <%= f.label :start_date %>
  <%= f.date_select :start_date %>

  <%= f.label :end_date %>
  <%= f.date_select :end_date %>

  <%= f.label :status %>
  <%= f.select :status, Campaign.statuses.keys %>

  <%= f.label :advertiser_id %>
  <%= f.hidden_field :advertiser_id, value: @advertiser.id %>

  <%= f.submit 'Submit' %>
<% end %>
