<%= form_for [:admin, @advertiser, @campaign], html: { class: 'needs-validation', novalidate: '' } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
  
  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 3, required: true %>
  </div>
  
  <div class="mb-3">
    <%= f.label :budget, class: 'form-label' %>
    <%= f.number_field :budget, class: 'form-control', required: true %>
  </div>
  
  <div class="mb-3">
    <%= f.label :start_date, class: 'form-label' %>
    <%= f.date_select :start_date, { discard_year: false, order: [:day, :month, :year] }, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :end_date, class: 'form-label' %>
    <%= f.date_select :end_date, { discard_year: false, order: [:day, :month, :year] }, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: 'form-label' %>
    <%= f.select :status, Campaign.statuses.keys, {}, class: 'form-select', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :advertiser_id, class: 'form-label' %>
    <%= f.hidden_field :advertiser_id, value: @advertiser.id %>
  </div>
  
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
