<!-- app/views/listings/edit.html.erb -->

<div class="container text-center">
  <h1>Editing Listing</h1>
</div>

<div class="container">
  <div class="card rounded">
    <div class="card-body">
      <div class="col">
        
        <%= render "form", listing: @listing %>

        <div class="mt-3 d-flex justify-content-between">
          <%= link_to "Show this listing", @listing, class: "btn btn-info me-2" %> <!-- margin end -->
          <%= link_to "Back to listings", listings_path, class: "btn btn-secondary" %>
        </div>

      </div>
    </div>
  </div>
</div>
