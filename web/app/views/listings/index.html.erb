<div class="container">

  <h1 class="text-center mt-5">Listings</h1>

<% content_for :page_title do %>
  Marketplace
<% end %>


  <div class="d-flex justify-content-center">
    <%= link_to "New listing", new_listing_path, class: "btn btn-primary mb-3" %>
  </div>

  <div class="row mt-3">
    <div class="col d-flex justify-content-center text-center">
      <%= render 'search' %>
    </div>
  </div>

  <div class="row mt-4 justify-content-center">
    <div class="col d-flex justify-content-center text-center">
      <%= paginate @listings %>
    </div>
  </div>

  <div class="mt-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @listings.each do |listing| %>
        <div class="col">
          <%= link_to listing, class: "no-underline" do %>
            <div class="card h-100 <%= 'pinned' if listing.pinned %>">
              <% if listing.thumbnail.attached? %>
                <%= image_tag listing.thumbnail.variant(resize_to_limit: [300, 200]), class: 'card-img-top' %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text text-dark"><%= truncate(listing.description, length: 100) %></p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <i class="fas fa-map-marker-alt"></i> <%= listing.location %>
                </li>
                <li class="list-group-item">
                  <i class="fas fa-tag"></i> Price: <%= number_to_currency(listing.price) %>
                </li>
                <li class="list-group-item">
                  <i class="fas fa-layer-group"></i> Category: <%= listing.category %>
                </li>
                <li class="list-group-item">
                  <i class="fas fa-eye"></i> Views: <%= listing.views %>
                </li>
              </ul>
              <div class="card-footer">
                <small class="text-muted"><i>Posted: <%= listing.created_at.strftime("%B %d, %Y") %></i></small>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mt-4 justify-content-center">
    <div class="col d-flex justify-content-center text-center">
      <%= paginate @listings %>
    </div>
  </div>

</div>

