
<div class="container">
  <h1 class="text-center" >Listings</h1>
  <div class="d-flex justify-content-center mt-2">
    <%= link_to "New listing", new_listing_path, class: "btn btn-primary mb-4" %>
  </div>
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
                    <% if listing.thumbnail.attached? %>
            <%= image_tag listing.thumbnail.variant(:thumb),
                 width: '300', height: '300', class: 'mx-auto d-block' %>
          <% end %>
            <h2 class="card-title"><%= listing.title %></h2>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">Location: <%= listing.location %></p>
            <p class="card-text">Price: <%= listing.price %></p>
            <p class="card-text">Views: <%= listing.views %></p>
            <%= link_to "Show this listing", listing %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "New listing", new_listing_path %>
</div>

