<div class="container">

  <% if @listing.thumbnail.attached? %>
    <%= image_tag @listing.thumbnail.variant(:thumb), width: '200', height: '200', class: 'me-2' %>
  <% end %>

  <div id="<%= dom_id @listing %>">
  <h3>
    
    <%= @listing.title %>
  </h3>

  <p>
    
    <%= @listing.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @listing.location %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @listing.price %>
  </p>

  <p>
    <strong>Views:</strong>
    <%= @listing.views %>
  </p>

  <p> Posted by: <%= @listing.user.username %>

</div>



<%= @listing.content %>


<div>
  <%= link_to "Edit this listing", edit_listing_path(@listing) %> |
  <%= link_to "Back to listings", listings_path %>

  <%= button_to "Destroy this listing", @listing, method: :delete %>
</div>


</div>